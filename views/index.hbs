{{#if user}}
    <h1 class="page-header">Hello {{user.username}}</h1>

    <div id="repos-wrapper">
        {{#each repos}}
            {{> repo }}
        {{else}}
            <h2>No repos</h2>
        {{/each}}

        <div id="fetcher" data-limit={{repoLimit}} data-offset={{repoOffset}}></div>
    </div>

{{else}}
    <h1 class="page-header">Main</h1>
{{/if}}
